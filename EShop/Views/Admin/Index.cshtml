@using EShop.Models.Models
@model List<Category>
<div class="offset-sm-1 col col-sm-6 text-center">
    <h3>Administration of Categories</h3>
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Category Name:
                </th>
                <th>
                    Description:
                </th>
                <th>
                    Parent:
                </th>
                <th>
                    Actions:
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">
                        @item.Name
                    </td>
                    <td width="30%">
                        @item.Description
                    </td>
                    @if (item.ParentCategory != null)
                    {
                        <td width="20%" class="fw-bold">
                            @item.ParentCategory.Name
                        </td>
                    }
                    else
                    {
                        <td width="20%" class="fw-bold">
                            none
                        </td>
                    }
                    <td>
                        <div class="w-80 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning mx-2">Edit</a>
                            <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Admin" asp-action="create" class="btn btn-success" style="width:150px">Create new</a>
</div>