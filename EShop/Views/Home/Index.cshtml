@using EShop.Models.ViewModels
@model ShowProductVariantViewModel
<div class="offset-sm-1 col col-sm-6 text-center">
    <span class="text-center">
        MoustBought
    </span>
    <div class="row">
        @foreach (var item in Model.mostBoughtProductVariants)
        {
            <div class="col col-sm-7 col-md-6">
                <h5>Name:@item.ProductName Variant:@item.ParamValue1</h5>
                <h5>Price: @item.Price</h5>
            </div>
        }
    </div>
    <span class="text-center">
        Price
    </span>
    <div class="row">
        @foreach (var item in Model.discountedProductsVariants)
        {
            <div class="col col-sm-7 col-md-6">
                <h5>Name:@item.ProductName Variant:@item.ParamValue1</h5>
                <h5>Price: @item.Price</h5>
            </div>
        }
    </div>
</div>

